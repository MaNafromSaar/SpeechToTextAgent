# Enhanced STT AI Agent Configuration
# Copy this to .env and add your API keys

# DeepSeek API Configuration (Recommended for text processing)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_URL=https://api.deepseek.com/v1/chat/completions

# OpenAI API Configuration (Alternative)
OPENAI_API_KEY=your_openai_api_key_here

# Text Processing Settings
DEFAULT_TEXT_PROVIDER=deepseek
ENABLE_TEXT_PROCESSING=true

# SSL2 ASIO Configuration
# Solid State Logic SSL2 Audio Interface Settings
PREFERRED_AUDIO_INTERFACE=SSL2
AUDIO_INPUT_DEVICE=SSL2
AUDIO_OUTPUT_DEVICE=SSL2

# Professional Audio Settings
PROFESSIONAL_AUDIO_MODE=true
ASIO_BUFFER_SIZE=128
AUDIO_SAMPLE_RATE=44100
AUDIO_BIT_DEPTH=24

# SSL2 Specific Settings
SSL2_INPUT_1_GAIN=0.5
SSL2_INPUT_2_GAIN=0.5
SSL2_PHANTOM_POWER=true
SSL2_DIRECT_MONITOR=false

# Recording Settings optimized for SSL2
RECORDING_CHANNELS=2
RECORDING_FORMAT=wav
LOW_LATENCY_MODE=true

# Ollama Integration (Local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# Whisper Settings
WHISPER_DEVICE=cpu
WHISPER_MODEL=base

# Advanced Audio Settings
AUDIO_THREADING=true
AUDIO_PRIORITY=high
BUFFER_COUNT=4

# Professional Features
ENABLE_ASIO_DIRECT_MONITORING=true
ENABLE_LOW_LATENCY_PROCESSING=true
PROFESSIONAL_METERING=true
